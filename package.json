{
  "name": "@component-template/designer",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "drag & drop your template",
  "keywords": [
    "web",
    "svelte",
    "component-template"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "dependencies": {
    "aggregation-repository-provider": "^2.7.2",
    "bitbucket-repository-provider": "^3.5.34",
    "buffer": "^5.6.0",
    "gitea-repository-provider": "^1.10.30",
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^2.0.3",
    "svelte-guard-history-router": "^1.1.18",
    "svelte-session-manager": "^1.0.12"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-virtual": "^2.0.2",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "npm-pkgbuild": "^6.11.19",
    "postcss-import": "^12.0.1",
    "rollup": "^2.11.2",
    "rollup-plugin-consts": "^1.0.2",
    "rollup-plugin-dev": "^1.1.2",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-svelte": "git+https://github.com/ctavan/rollup-plugin-svelte.git#handle-missing-exports-gracefully",
    "rollup-plugin-terser": "^6.1.0",
    "semantic-release": "^17.0.8",
    "svelte": "^3.23.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/component-template-designer.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/component-template-designer/issues"
  },
  "homepage": "https://github.com/arlac77/component-template-designer#readme",
  "config": {
    "api": "/services/component-template-designer/api",
    "base": "/services/component-template-designer",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "name": "component-template-designer",
    "groups": "web",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "installdir": "/services/${name}/frontend",
    "hooks": "pacman/hooks.sh",
    "depends": {
      "nginx-mainline": ">=1.17.10"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
